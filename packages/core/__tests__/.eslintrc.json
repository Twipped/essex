{
  "extends": [
    "@twipped/eslint-config/react",
    "@twipped/eslint-config/test-react"
  ],
  "overrides": [
    {
      "files": "*.mjs",
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {
        "import/no-nodejs-modules": "off",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "always",
            "mjs": "always",
            "jsx": "always"
          }
        ],
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ]
      }
    }
  ]
}